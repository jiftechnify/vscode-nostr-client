{
  "name": "nostr-client",
  "version": "0.0.2",
  "author": "jiftechnify",
  "repository": {
    "url": "https://github.com/jiftechnify/vscode-nostr-client",
    "type": "git"
  },
  "license": "MIT",
  "private": true,
  "displayName": "Nostr Client",
  "description": "Nostr client in VSCode",
  "publisher": "jiftechnify",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "nostr"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Nostr",
        "command": "nostr-client.postText",
        "title": "Post Text"
      },
      {
        "category": "Nostr",
        "command": "nostr-client.setPrivKey",
        "title": "Set Private Key"
      },
      {
        "category": "Nostr",
        "command": "nostr-client.clearPrivkey",
        "title": "Clear Private Key"
      },
      {
        "category": "Nostr",
        "command": "nostr-client.syncMetadata",
        "title": "Synchronize Account Metadata"
      }
    ],
    "configuration": {
      "title": "Nostr Client",
      "properties": {
        "nostrClient.bootstrapRelays": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "default": [
            "wss://relay.damus.io",
            "wss://relayable.org"
          ],
          "markdownDescription": "Relay URLs to get metadata (your profile, relays to use etc...) of your account.  Set your daily-use relays here."
        },
        "nostrClient.additionalWriteRelays": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "default": [],
          "markdownDescription": "Relay URLs to additionally send your posts.  Write relays configured by events (kind 3 & 10002) are also used."
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.81.0",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-web": "^0.0.44",
    "assert": "^2.0.0",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "nostr-typedef": "^0.4.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "nostr-fetch": "^0.12.2",
    "nostr-tools": "^1.14.2",
    "rx-nostr": "https://github.com/jiftechnify/rx-nostr#patched"
  }
}
